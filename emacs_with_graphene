;; -*- mode: lisp -*-

(setq prelude-packages
  '(auto-complete
    solarized-theme
    graphene
    sr-speedbar
    eldoc
    evil
    magit
    ethan-wspace
    flx-ido))

(load-file "~/gitrepos/dotfiles/emacs_with_melpa")

(require 'graphene)
(setq graphene-default-font nil)
(setq graphene-variable-pitch-font nil)
(setq graphene-fixed-pitch-font nil)
(graphene-set-fonts)

(setq resize-mini-windows t) ;; fixes the ido vertical problem when using graphene

(global-ethan-wspace-mode)

(require 'sr-speedbar)
(global-set-key [f6] 'sr-speedbar-toggle)

