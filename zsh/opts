#!/bin/zsh
#
# zsh specifics

# autoload
autoload -U compinit # for completion system
compinit

autoload zmv # for renaming better than your mother named you

autoload -U zfinit # For initializing zftp
zfinit

autoload -U zcalc # for mathhhh


# history
HISTFILE=~/.zsh/history
HISTSIZE=5000
SAVEHIST=5000
setopt hist_allow_clobber      # use key-up (one up in history) to overwrite files (noclobber files)
setopt hist_reduce_blanks
setopt hist_ignore_space
setopt histverify              # when using ! cmds, confirm first

# type a dir's name to cd into it
compctl -/ cd

# Some options..
setopt autopushd pushdminus pushdsilent pushdtohome
setopt autocd
setopt cdablevars
setopt globdots
setopt ignoreeof
setopt interactivecomments
setopt banghist
setopt noclobber
setopt SH_WORD_SPLIT
setopt nobeep                  # i hate beeps
setopt automenu
setopt autopushd               # automatically append dirs to the push/pop list
setopt pushdignoredups         # and don't duplicate them
setopt cdablevars              # avoid the need for an explicit $


setopt nohup                   # don't kill child processes of the current zsh when the zsh process is killed


setopt nolisttypes             # show types in completion
setopt extendedglob            # weird & wacky pattern matching - yay zsh!
setopt completeinword          # not just at the end
setopt alwaystoend             # when complete from middle, move cursor
setopt nopromptcr              # don't add \n which overwrites cmds with no \n
setopt interactivecomments     # escape commands so i can use them later
